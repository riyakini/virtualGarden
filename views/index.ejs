  { name: "Amla",        type: "Herb",      img: "images/amla.jpg",        link: "amla.html" },
];

/* Render Plant Grid */
const grid = document.querySelector('.plant-grid');

grid.innerHTML = plants.map(p => `
  <a href="${p.link}" class="plant-card">
    <img src="${p.img}" alt="${p.name}">
    <h3>${p.name}</h3>
    <p>${p.type}</p>
  </a>
`).join('');

/* Simple scroll reveal */
const revealOnScroll = () => {
  document.querySelectorAll('.plant-card, .trusted-text, .healing-card').forEach(el => {
    const rect = el.getBoundingClientRect();
    if (rect.top < window.innerHeight - 50) {
      el.classList.add('visible');
    }
  });
};
window.addEventListener('scroll', revealOnScroll);
window.addEventListener('load', revealOnScroll);

