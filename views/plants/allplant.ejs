  /* Toolbar */
  .toolbar {
    display: flex;
    align-items: center;
    gap: .75rem;
    padding: 1rem 2rem;
    background: #fff;
    box-shadow: 0 1px 4px rgba(0,0,0,.08);
    flex-wrap: wrap;
  }
  .toolbar input[type="search"] {
    flex: 1;
    max-width: 700px;
    padding: .6rem 1rem;
    border: 1px solid #ddd;
    border-radius: 25px;
    font-size: 1rem;
    transition: box-shadow .2s;
  }
  .toolbar input[type="search"]:focus {
    outline: none;
    box-shadow: 0 0 0 2px #4caf50;
  }
  .toggle-buttons {
    display: flex;
    gap: .5rem;
  }
  .toggle-buttons button {
    padding: .5rem 1rem;
    border: 1px solid #ccc;
    background: #f5f5f5;
    font-size: .9rem;
    border-radius: 6px;
    cursor: pointer;
    transition: background .2s, color .2s;
  }
  .toggle-buttons .active {
    background: #4caf50;
    color: #fff;
    border-color: #4caf50;
  }
  .add-btn {
    padding: .5rem 1.2rem;
    background: #2e7d32;
    color: #fff;
    border: none;
    border-radius: 6px;
    font-size: .95rem;
    cursor: pointer;
    font-weight: 500;
    transition: background .2s;
    text-decoration: none;
  }
  .add-btn:hover { background: #1b5e20; }

  /* Grid */
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 1.2rem;
    padding: 2rem;
  }

  /* Card */
  .card {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    background: #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,.1);
    transition: transform .25s ease, box-shadow .25s ease;
    cursor: pointer;
  }
  .card:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 4px 14px rgba(0,0,0,.15);
  }
  .card img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    transition: transform .4s ease;
  }
  .card:hover img { transform: scale(1.05); }

  .card-info {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: .7rem 1rem;
    background: linear-gradient(to top, rgba(0,0,0,.6), rgba(0,0,0,.1));
    color: #fff;
  }
  .card-info h3 {
    margin: 0;
    font-size: 1.05rem;
    font-weight: 600;
  }
  .card-info p {
    margin: .2rem 0 0;
    font-size: .85rem;
    color: #e0e0e0;
  }

  .card-actions {
    position: absolute;
    top: 10px;
    right: 10px;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }
  .card-actions span {
    width: 28px;
    height: 28px;
    display: grid;
    place-items: center;
    background: rgba(255,255,255,0.9);
    border-radius: 50%;
    font-size: 14px;
    transition: background .2s;
    box-shadow: 0 1px 3px rgba(0,0,0,.25);
    cursor: pointer;
  }
  .card-actions span:hover { background: #4caf50; color: #fff; }
</style>
